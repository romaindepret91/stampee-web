<main>
    <section class="login-form">
        <h1 class="form-title">{{ title|upper }}</h1>
        <form class="form" method="POST" action="?entity=logIn&action=log">
            <span class="error-msg">{{ errorMsg }}</span>
            <div class="form-input">
                <label>Courriel</label>
                <input class="text-input" type="email" name="user_email" value="{{ user.user_email }}">
            </div>
            <div class="form-input">
                <label>Mot de passe</label>
                <input class="text-input" type="password" name="user_password" value="{{ user.user_password }}">
            </div>
            <input class="submit btn btn--light-blue" type="submit" value="Log In">
        </form>
    </section>
</main>