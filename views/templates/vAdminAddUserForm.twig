<script>history.pushState({}, '', '?action=addUserForm')</script>
<main>
    <section class="add-user-form">
        <h1 class="form-title">{{ title }}</h1>
        <form class="form" method="POST" action="?action=add">
            <div class="form-input">
                <label>Nom</label>
                <input class="text-input" type="text" name="user_lastname" value="{{ user.user_lastname }}">
                <span class="error-msg">&nbsp;{{ errors.user_lastname }}</span>
            </div>
            <div class="form-input">
                <label>Pr√©nom</label>
                <input class="text-input" type="text" name="user_firstname" value="{{ user.user_firstname }}">
                <span class="error-msg">&nbsp;{{ errors.user_firstname }}</span>
            </div>
            <div class="form-input">
                <label>Courriel</label>
                <input class="text-input" type="email" name="user_email" value="{{ user.user_email }}">
                <span class="error-msg">&nbsp;{{ errCourriel }} {{ errors.user_email }}</span>
            </div>
            <div class="form-input">
                <label>Profil</label>
                <select class="select-input" name="role_id" id="role_id">
                    <option value="1">Administrateur</option>
                    <option value="2">Membre</option>
                </select>
                <span class="error-msg">&nbsp;{{ errors.role_id }}</span>
            </div>
            <div class="form-actions">
                <button class="btn"><a href="admin">Back</a></button>
                <input class="submit btn" type="submit" value="Add">
            </div>
        </form>
    </section>
</main>