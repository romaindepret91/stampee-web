<main>
    <section class="signup-form">
        <h1 class="form-title">{{ title|upper }}</h1>
        <form class="form" method="POST" action="?entity=signUp&action=add">
            <div class="form-input">
                <label>Nom</label>
                <input class="text-input" type="text" name="user_lastname" value="{{ user.user_lastname }}">
                <span class="error-msg">&nbsp;{{ errors.user_lastname }}</span>
            </div>
            <div class="form-input">
                <label>Pr√©nom</label>
                <input class="text-input" type="text" name="user_firstname" value="{{ user.user_firstname }}">
                <span class="error-msg">&nbsp;{{ errors.user_firstname }}</span>
            </div>
            <div class="form-input">
                <label>Courriel</label>
                <input class="text-input" type="email" name="user_email" value="{{ user.user_email }}">
                <span class="error-msg">&nbsp;{{ errCourriel }} {{ errors.user_email }}</span>
            </div>
            <input class="submit btn btn--light-blue" type="submit" value="Sign Up">
        </form>
    </section>
</main>